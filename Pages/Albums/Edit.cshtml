@page
@model WebAppCrud.Pages.Albums.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album.ID" />
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Price" class="control-label"></label>
                <input asp-for="Album.Price" class="form-control" />
                <span asp-validation-for="Album.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.PublishingDate" class="control-label"></label>
                <input asp-for="Album.PublishingDate" class="form-control" />
                <span asp-validation-for="Album.PublishingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.ArtistID" class="control-label">Artist Name</label>
                <select asp-for="Album.ArtistID" class="form-control" asp-items="ViewBag.ArtistID">
                </select>
                <span asp-validation-for="Album.ArtistID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
